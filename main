from telegram import Update, InlineKeyboardButton, InlineKeyboardMarkup
from telegram.ext import Application, CommandHandler, CallbackQueryHandler, CallbackContext

async def start(update: Update, context: CallbackContext):
    keyboard = [
        [InlineKeyboardButton("üìÖ –ø–æ–Ω–µ–¥–µ–ª—å–Ω–∏–∫", callback_data="monday")],
        [InlineKeyboardButton("üìÜ –≤—Ç–æ—Ä–Ω–∏–∫", callback_data="tuesday")],
        [InlineKeyboardButton("üìÖ —Å—Ä–µ–¥–∞", callback_data="wednesday")],
        [InlineKeyboardButton("üìÜ —á–µ—Ç–≤–µ—Ä–≥", callback_data="thursday")],
        [InlineKeyboardButton("üìÖ –ø—è—Ç–Ω–∏—Ü–∞", callback_data="friday")]
    ]
    reply_markup = InlineKeyboardMarkup(keyboard)
    await update.message.reply_text("–í—ã–±–µ—Ä–∏—Ç–µ —Ä–∞—Å–ø–∏—Å–∞–Ω–∏–µ:", reply_markup=reply_markup)
    

async def button_click(update: Update, context: CallbackContext):
    query = update.callback_query
    if query.data == "monday":
        await query.edit_message_text("–°–µ–≥–æ–¥–Ω—è: –∞–Ω–≥–ª–∏–π—Å–∫–∏–π (9:25), —Ñ–∏–∑–∏–∫–∞ (10:25), –ª–∏—Ç–µ—Ä–∞—Ç—É—Ä–∞ (11:30), –∞–ª–≥–µ–±—Ä–∞ (12:30), –≥–µ–æ–≥—Ä–∞—Ñ–∏—è (13:35)")
    elif query.data == "tuesday":
        await query.edit_message_text("–°–µ–≥–æ–¥–Ω—è: —Ä—É—Å—Å–∫–∏–π (8:30), –ª–∏—Ç–µ—Ä–∞—Ç—É—Ä–∞ (9:25), –∞–Ω–≥–ª–∏–π—Å–∫–∏–π (10:25), —Ö–∏–º–∏—è (11:30), –∏—Å—Ç–æ—Ä–∏—è (12:30), –≥–µ–æ–º–µ—Ç—Ä–∏—è (13:35), –æ–±–∂(14:30)")
    elif query.data == "wednesday":
        await query.edit_message_text("–°–µ–≥–æ–¥–Ω—è: –∞–Ω–≥–ª–∏–π—Å–∫–∏–π (8:30), –∞–ª–≥–µ–±—Ä–∞ (9:25), —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞ (10:25), —Ñ–∏–∑—Ä–∞ (11:30), –≥–µ–æ–≥—Ä–∞—Ñ–∏—è (12:30), –∞–Ω–≥–ª–∏–π—Å–∫–∏–π (13:35)")
    elif query.data == "thursday":
        await query.edit_message_text("–°–µ–≥–æ–¥–Ω—è: —Ä—É—Å—Å–∫–∏–π (8:30), —Ñ–∏–∑–∏–∫–∞ (9:25), —Ñ–∏–∑–∏–∫–∞ (10:25), —Ñ–∏–∑–∏–∫–∞ (11:30), –ª–∏—Ç–µ—Ä–∞—Ç—É—Ä–∞ (12:30), –∏—Å—Ç–æ—Ä–∏—è (13:35), –æ–±—â–µ—Å—Ç–≤–æ–∑–Ω–∞–Ω–∏–µ(14:30)")
    elif query.data == "friday":
        await query.edit_message_text("–°–µ–≥–æ–¥–Ω—è: —Ä—É—Å—Å–∫–∏–π (8:30), –≥–µ–æ–º–µ—Ç—Ä–∏—è (9:25), —Ñ–∏–∑–∫—É–ª—å—Ç—É—Ä–∞ (10:25), –∞–ª–≥–µ–±—Ä–∞ (11:30), –∏–Ω—Ñ–æ—Ä–º–∞—Ç–∏–∫–∞ (12:30), –±–∏–æ–ª–æ–≥–∏—è (13:35), —Ö–∏–º–∏—è(14:30)")



def main():
    application = Application.builder().token("7830598234:AAEszkCRJlLZx834vWEHsXLoauYdLdDcohc").build()
    application.add_handler(CommandHandler("start", start))
    application.add_handler(CallbackQueryHandler(button_click))
    application.run_polling()

if __name__ == "__main__":
    main()
